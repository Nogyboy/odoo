<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="estate_view_tree" model="ir.ui.view">
    <field name="name">estate.tree</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <tree string="Propiedades">
        <field name="name" />
        <field name="postcode" />
        <field name="bedrooms" />
        <field name="living_area" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability" />
      </tree>
    </field>
  </record>

  <record id="estate_view_form" model="ir.ui.view">
    <field name="name">estate.form</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <form string="Propiedad">
        <sheet>
          <group>
            <field name="name" />
            <group>
              <field name="postcode" />
              <field name="date_availability" />
            </group>
            <group>
              <field name="expected_price" />
              <field name="selling_price" />
            </group>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description" label="Description" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_area" />
                <field name="garden_orientation" />
                <field name="state" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="estate_model_action" model="ir.actions.act_window">
    <field name="name">Propiedades</field>
    <field name="res_model">estate_property</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Crea una nueva propiedad
      </p>
      <p>
        Click en Crear para añadir una nueva propiedad.
      </p>
      <p>
        Puedes crear una propiedad desde el menú Propiedades.
      </p>
    </field>
  </record>

  <record id="estate_search" model="ir.ui.view">
    <field name="name">estate.search</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <search string="Propiedades">
        <field name="name" string="Nombre" />
        <field name="postcode" string="Código Postal" />
        <field name="expected_price" string="Precio Esperado" />
        <field name="bedrooms" string="Habitaciones" />
        <field name="living_area" string="Superficie" />
        <field name="facades" string="Fachadas" />
        <separator />
        <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
        <filter string="Propiedades Disponibles" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
        <group expand="1" string="Group By">
          <filter string="Código Postal" name="group_by_postcode" context="{'group_by':'postcode'}" />
        </group>
      </search>
    </field>
  </record>
</odoo>