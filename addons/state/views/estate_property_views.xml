<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="estate_view_tree" model="ir.ui.view">
    <field name="name">estate.tree</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <tree string="Propiedades" decoration-success="state == 'offer_received'"
       decoration-bf="state == 'offer_accepted'"
       decoration-muted="state == 'sold'"
       >
        <field name="name" />
        <field name="state" />
        <field name="postcode" />
        <field name="bedrooms" />
        <field name="living_area" />
        <field name="expected_price" />
        <field name="selling_price" />
        <field name="date_availability"  optional="True" />
      </tree>
    </field>
  </record>

  <record id="estate_view_form" model="ir.ui.view">
    <field name="name">estate.form</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <form string="Propiedad">
        <header>
          <button name="action_sell_property" type="object" string="Vendido" states="new, offer_received, offer_accepted" attrs="{'invisible': [('state', '!=', 'offer_accepted')]}"/>
          <button name="action_cancel_property" type="object" string="Cancelar" states="new, offer_received, offer_accepted" attrs="{'invisible': [('state', '!=', 'offer_accepted')]}"/>
          <field name="state" widget="statusbar" clickable="True"  />
        </header>
        <sheet>
          <group>
            <field name="name" />
            <field name="property_tag_ids" editable="bottom" widget="many2many_tags" options="{'color_field': 'color'}"/>
            <group>
              <field name="postcode" />
              <field name="date_availability" />
            </group>
            <group>
              <field name="expected_price" />
              <field name="selling_price" />
              <field name="best_offer" />
            </group>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description" label="Description" />
                <field name="bedrooms" />
                <field name="facades" />
                <field name="garage" />
                <field name="garden" />
                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}" />
                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" />
                <field name="living_area" />
                <field name="total_area" />
              </group>
            </page>
            <page string="Ofertas">
              <field name="offer_ids" mode="tree" attrs="{'readonly': [('state', 'in', ['offer_accepted', 'sold', 'canceled'])]}">
                <tree string="Ofertas" default_order="price desc" editable="bottom"
                decoration-danger="status == 'refused'"
                decoration-success="status == 'accepted'"
                >
                  <field name="price" />
                  <field name="status" />
                  <field name="partner_id" />
                  <field name="validity" />
                  <field name="date_deadline" />
                  <button name="action_confirm_offer" string="Confirmar" type="object" icon="fa-check"/>
                  <button name="action_refuse_offer" string="Rechazar" type="object" icon="fa-close"/>
                </tree>
              </field>
            </page>
            <page string="Otros">
              <group>
                <field name="property_type_id" options="{'no_create': True, 'no_open': True}"/>
                <field name="user_id" label="Vendedor" />
                <field name="buyer_id" label="Comprador" />
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="estate_model_action" model="ir.actions.act_window">
    <field name="name">Propiedades</field>
    <field name="res_model">estate_property</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'search_default_state': 'new'}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Crea una nueva propiedad
      </p>
      <p>
        Click en Crear para añadir una nueva propiedad.
      </p>
      <p>
        Puedes crear una propiedad desde el menú Propiedades.
      </p>
    </field>
  </record>

  <record id="estate_search" model="ir.ui.view">
    <field name="name">estate.search</field>
    <field name="model">estate_property</field>
    <field name="arch" type="xml">
      <search string="Propiedades">
        <field name="name" string="Nombre" />
        <field name="postcode" string="Código Postal" />
        <field name="expected_price" string="Precio Esperado" />
        <field name="bedrooms" string="Habitaciones" />
        <field name="living_area" string="Superficie" />
        <field name="facades" string="Fachadas" />
        <filter name="state" string="Disponible" domain="[('state', '=', 'new')]" />
        <separator />
        <filter string="Archivados" name="inactive" domain="[('active', '=', False)]" />
        <filter string="Propiedades Disponibles" name="available"
          domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
        <group expand="1" string="Group By">
          <filter string="Código Postal" name="group_by_postcode" context="{'group_by':'postcode'}" />
        </group>
      </search>
    </field>
  </record>
</odoo>