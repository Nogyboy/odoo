<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="estate_offer_view_tree" model="ir.ui.view">
    <field name="name">estate.tree</field>
    <field name="model">estate_property_offer</field>
    <field name="arch" type="xml">
      <tree string="Propiedades">
        <field name="price" />
        <field name="status" />
        <field name="partner_id" />
        <field name="validity" />
        <field name="date_deadline" />
      </tree>
    </field>
  </record>

  <record id="estate_offer_view_form" model="ir.ui.view">
    <field name="name">estate.form</field>
    <field name="model">estate_property_offer</field>
    <field name="arch" type="xml">
      <form string="Propiedad">
        <sheet>
          <group>
            <group>
              <field name="price" />
              <field name="validity" />
              <field name="date_deadline" />
              <field name="status" /> 
            </group>
            <group>
              <field name="partner_id" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="estate_offer_search" model="ir.ui.view">
    <field name="name">estate.search</field>
    <field name="model">estate_property_offer</field>
    <field name="arch" type="xml">
      <search string="Propiedades">
        <field name="status" />
        <separator />
        <filter string="Aceptado" name="status" domain="[('status', '=', 'accepted')]" />
        <filter string="Rechazado" name="status" domain="[('status', '=', 'refused')]" />
      </search>
    </field>
  </record>
</odoo>