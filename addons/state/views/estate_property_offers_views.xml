  <record id="estate_offer_search" model="ir.ui.view">
    <field name="name">estate.search</field>
    <field name="model">estate_property_offer</field>
    <field name="arch" type="xml">
      <search string="Propiedades">
        <field name="status" />
        <separator />
        <filter string="Aceptado" name="status" domain="[('status', '=', 'accepted')]" />
        <filter string="Rechazado" name="status" domain="[('status', '=', 'refused')]" />
      </search>
    </field>
  </record>
